<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="intem.mybusinessmobile.intem.smartpos.activities.CreditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextView_Credit_Client"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:fontFamily="sans-serif-condensed"
            android:text="TextView"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/TextView_Credit_Saldo"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/viewfinder_laser"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editText_Credit_Amount"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="Monto de tu pago "
            android:inputType="textPersonName"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_credit_pay"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="30dp"
            android:text="Abonar" />
    </LinearLayout>
</RelativeLayout>
