<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginBottom="60dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ET_NU_Nick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:hint="Usuario o NickName"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:id="@+id/ET_NU_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:hint="Nombre del usuario"
                android:inputType="textPersonName"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:id="@+id/ET_NU_Pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:hint="Password"
                android:textColor="@color/colorPrimary" />

            <Switch
                android:id="@+id/switchSup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:text="El usuario es Supervisor "
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:typeface="normal" />


            <Switch
                android:id="@+id/switch_NewUser_POS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Acceso a ventas"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <Switch
                android:id="@+id/switch_new_user_Discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Permite generar descuentos"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <Switch
                android:id="@+id/switch_Users_ClientsAccess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Acceso a Clientes"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <Switch
                android:id="@+id/switch_Users_OrdersAccess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Acceso a pedidos "
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <Switch
                android:id="@+id/switch_Users_ProdsAccess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Acceso a productos"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <Switch
                android:id="@+id/switch_Users_MovsInvAccess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Acceso a movimiento"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>